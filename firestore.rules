rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    //
    // Functions
    //
    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    function isUserProfileOwner(userId) {
      return request.auth.uid == userId;
    }

    function isUserAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isOneOfChatParticipants(chatRoomId) {
      let uids = chatRoomId.split('_');
      return request.auth.uid == uids[0] || request.auth.uid == uids[1];
    }
    
    //
    // Rules
    //
    
    // USERS
    match /users/{userId} {
      // Anyone can see a user's profile
      allow read: if isUserAuthenticated();
      // Only the user themselves can create or update their profile
      allow create, update, delete: if isUserProfileOwner(userId);
    }

    // CHATS & MESSAGES
    match /chats/{roomId}/{messages=**} {
      // Allow read/write for any authenticated user. Specific access is controlled by the rules below.
      allow read, write: if isUserAuthenticated();
    }
    
    // REQUIREMENTS
    match /requirements/{requirementId} {
      // Any authenticated user can read all requirements
      allow read: if isUserAuthenticated();
      // Any authenticated user can CREATE a requirement (via the sendMessage server-side function)
      allow create: if isUserAuthenticated();
      // Only admins can update or delete requirements
      allow update, delete: if isUserAdmin();
    }

    // OFFERS
    match /offers/{offerId} {
      // Any authenticated user can read offers
      allow read: if isUserAuthenticated();
      // Only admins can create, update, or delete offers
      allow create, update, delete: if isUserAdmin();
    }
    
    // FLAGGED CONTENT - Only admins can access
    match /flagged_content/{contentId} {
      allow read, write, create, delete: if isUserAdmin();
    }

    // PERSONAL CHATS SUBCOLLECTION
    match /users/{userId}/personalChats/{chatId} {
        // Only the owner of the user profile can access their list of personal chats
        allow read, write, delete: if isUserProfileOwner(userId);
    }
    
    // COLLECTION GROUP - MESSAGES
    // This rule allows admins to perform a collectionGroup query on 'messages'
    // for features like finding spam across all chats.
    match /{path=**}/messages/{messageId} {
      allow read: if isUserAdmin();
    }
  }
}
