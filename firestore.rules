
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // USERS
    // Users can be read by any authenticated user (for profile display)
    // but can only be written to by the user themselves.
    // The personalChats subcollection can only be accessed by its owner.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      match /personalChats/{otherUserId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // CHATS & MESSAGES
    // A user can read a chat document if it's public or if they are a member.
    // They can read messages under the same conditions.
    // They can write messages if authenticated (server-side logic handles which rooms).
    match /chats/{roomId} {
      allow read: if request.auth != null && (get(/databases/$(database)/documents/chats/$(roomId)).data.isPersonal == false || request.auth.uid in get(/databases/$(database)/documents/chats/$(roomId)).data.users);
      allow write: if request.auth != null;

      match /messages/{messageId} {
        allow read: if request.auth != null && (get(/databases/$(database)/documents/chats/$(roomId)).data.isPersonal == false || request.auth.uid in get(/databases/$(database)/documents/chats/$(roomId)).data.users);
        allow write: if request.auth != null;
      }
    }

    // REQUIREMENTS
    // Readable by any authenticated user.
    // Writable (update/delete) only by admins.
    // Cannot be created from the client (only by backend function).
    match /requirements/{requirementId} {
      allow read: if request.auth != null;
      allow create: if false;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // OFFERS
    // Readable by any authenticated user.
    // Writable (create/update/delete) only by admins.
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // ADMIN-ONLY COLLECTION GROUP QUERIES
    // This allows admins to perform collectionGroup queries (e.g., for spam logs)
    match /{path=**}/messages/{messageId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
