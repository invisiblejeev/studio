rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Anyone can read public user data (for displaying names, avatars etc.)
    // - A user can only write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Personal Chats Subcollection:
      // - A user can only access their own list of personal chats.
      match /personalChats/{otherUserId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Chats:
    // - Any authenticated user can read from any chat room. This is necessary for the
    //   Requirements page and for fetching user info across chats.
    // - Write access is controlled:
    //   - For state chats (e.g., /chats/california), you must be in that state or be an admin.
    //   - For personal chats (e.g., /chats/uid1_uid2), you must be one of the two users in the chat.
    match /chats/{roomId}/{message=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.state == roomId) ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true) ||
        (request.auth.uid in roomId.split('_'))
      );
    }
    
    // Offers:
    // - Anyone can read offers.
    // - Only admins can create, update, or delete offers.
    match /offers/{offerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Flagged Content (for AI moderation training):
    // - Any authenticated user can read this list (for moderation checks).
    // - Only admins can write to this list.
    match /flagged_content/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Inappropriate Logs:
    // - Only admins can read or write these logs.
    match /inappropriate_logs/{logId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
